{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omen.ace-framework.org/schema/v0.7/packets/TaskDirectivePacket.schema.json",
  "title": "TaskDirectivePacket",
  "description": "Layer 5 -> Layer 6 directive to execute tool call, computation, or read operation (OMEN.md Section 9.3)",
  "allOf": [
    {
      "$ref": "./PacketBase.schema.json"
    }
  ],
  "properties": {
    "header": {
      "properties": {
        "packet_type": {
          "const": "TaskDirectivePacket"
        }
      }
    },
    "payload": {
      "type": "object",
      "required": ["task_id", "task_type", "execution_method"],
      "properties": {
        "task_id": {
          "type": "string",
          "description": "Unique task identifier for result correlation",
          "pattern": "^task_[a-zA-Z0-9_-]+$"
        },
        "task_type": {
          "type": "string",
          "description": "Execution classification",
          "enum": [
            "tool_read",
            "tool_write",
            "computation",
            "verification",
            "memory_lookup"
          ]
        },
        "execution_method": {
          "type": "object",
          "description": "How to execute this task",
          "required": ["method"],
          "properties": {
            "method": {
              "type": "string",
              "enum": ["tool", "code", "llm_call", "memory_query"]
            },
            "tool_id": {
              "type": "string",
              "description": "Required if method=tool"
            },
            "tool_params": {
              "type": "object",
              "description": "Tool invocation parameters"
            },
            "code_ref": {
              "type": "string",
              "description": "Required if method=code"
            },
            "code_params": {
              "type": "object",
              "description": "Code execution parameters"
            }
          }
        },
        "tool_safety_class": {
          "type": "string",
          "description": "Safety classification (OMEN.md Lines 661-668)",
          "enum": ["READ", "WRITE", "MIXED"]
        },
        "authorization_token_id": {
          "type": "string",
          "description": "Required if tool_safety_class is WRITE or MIXED",
          "pattern": "^token_[a-zA-Z0-9_-]+$"
        },
        "timeout_seconds": {
          "type": "integer",
          "description": "Max execution time before cancellation",
          "minimum": 1
        },
        "retry_policy": {
          "type": "object",
          "properties": {
            "max_retries": {"type": "integer", "minimum": 0},
            "backoff_multiplier": {"type": "number", "minimum": 1}
          }
        }
      },
      "additionalProperties": false
    }
  }
}
