{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omen.ace-framework.org/schema/v0.7/packets/ToolAuthorizationToken.schema.json",
  "title": "ToolAuthorizationToken",
  "description": "Authorization artifact for WRITE/MIXED tool usage, issued by Layer 1 or delegated authority (OMEN.md Section 9.3)",
  "allOf": [
    {
      "$ref": "./PacketBase.schema.json"
    }
  ],
  "properties": {
    "header": {
      "properties": {
        "packet_type": {
          "const": "ToolAuthorizationToken"
        }
      }
    },
    "payload": {
      "type": "object",
      "required": [
        "token_id",
        "authorized_scope",
        "expiry",
        "max_usage_count",
        "issuer_layer"
      ],
      "properties": {
        "token_id": {
          "type": "string",
          "description": "Unique token identifier",
          "pattern": "^token_[a-zA-Z0-9_-]+$"
        },
        "authorized_scope": {
          "type": "object",
          "description": "What this token permits",
          "required": ["tool_ids", "operation_types"],
          "properties": {
            "tool_ids": {
              "type": "array",
              "description": "Allowed tool identifiers",
              "items": {"type": "string"},
              "minItems": 1
            },
            "operation_types": {
              "type": "array",
              "description": "Permitted operations",
              "items": {
                "type": "string",
                "enum": ["read", "write", "delete", "modify"]
              },
              "minItems": 1
            },
            "resource_constraints": {
              "type": "object",
              "description": "Bounds on what can be affected (e.g., max ISK, specific systems)"
            }
          }
        },
        "expiry": {
          "type": "string",
          "format": "date-time",
          "description": "Token becomes invalid after this timestamp"
        },
        "max_usage_count": {
          "type": "integer",
          "description": "Number of directives this token can authorize",
          "minimum": 1
        },
        "usage_count": {
          "type": "integer",
          "description": "Current usage (incremented by Integrity overlay)",
          "minimum": 0,
          "default": 0
        },
        "issuer_layer": {
          "description": "Layer or overlay that issued this token",
          "oneOf": [
            {"type": "integer", "minimum": 1, "maximum": 6},
            {"type": "string", "enum": ["Integrity"]}
          ]
        },
        "revoked": {
          "type": "boolean",
          "description": "True if Integrity has revoked this token",
          "default": false
        },
        "rationale": {
          "type": "string",
          "description": "Why this token was issued (audit trail)",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  }
}
