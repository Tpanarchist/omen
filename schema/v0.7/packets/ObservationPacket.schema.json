{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omen.ace-framework.org/schema/v0.7/packets/ObservationPacket.schema.json",
  "title": "ObservationPacket",
  "description": "Carries sensory input from tools, user observations, or system telemetry (OMEN.md Section 9.3)",
  "allOf": [
    {
      "$ref": "./PacketBase.schema.json"
    }
  ],
  "properties": {
    "header": {
      "properties": {
        "packet_type": {
          "const": "ObservationPacket"
        }
      }
    },
    "payload": {
      "type": "object",
      "required": ["observation_type", "data"],
      "properties": {
        "observation_type": {
          "type": "string",
          "description": "Category of observation",
          "enum": [
            "tool_output",
            "user_input",
            "system_telemetry",
            "character_state",
            "market_signal",
            "intel_update"
          ]
        },
        "data": {
          "type": "object",
          "description": "Raw or normalized observation data",
          "minProperties": 1
        },
        "source_tool": {
          "type": "string",
          "description": "Tool identifier if from tool execution"
        },
        "query_params": {
          "type": "object",
          "description": "Parameters used to generate this observation"
        },
        "reliability_metadata": {
          "type": "object",
          "description": "Quality indicators for this observation",
          "properties": {
            "tool_success": {
              "type": "boolean"
            },
            "latency_ms": {
              "type": "number",
              "minimum": 0
            },
            "partial_result": {
              "type": "boolean"
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
